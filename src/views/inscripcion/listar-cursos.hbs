<section class="card">
         <div class="row">
             <h3>Proceso de inscripción para el aspirante: {{ user.nombre }}, con documento de identificación No. {{ user.documento }} </h3>
        <div class="col-md-12 mx-auto">
            <form action="/inscribir/aspirante/{{ user._id }}?_method=PUT" method="post">
                <div class="form-group row">
                     <div class="col-sm-6">
                        <h4>Selecione el curso al cual desea incribirse :</h4>
                    </div>
                    <div class="col-sm-6">
                        <input type="hidden" name="_method" value="PUT">
                        
                        <select class="form-control" id="idCurso" name="idCurso">
                            {{#each cursos}}
                                <option value="{{_id }}">{{nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                   
                </div>
                
                <button type="submit" class="btn btn-primary px-4 float-right">Inscribir</button>
            </form>
        </div>
    </div>
</section>
