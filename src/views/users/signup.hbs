<div class="container p-4">
  <h2>Registrar nuevo usuario</h2>
<hr />

  <div class="row">
    <div class="col-md-6 mx-auto">
      <form action="/users/signup" method="post">
        <div class="form-group row">
          <div class="col-sm-6">
            <label for="nombre">Documento Identidad * </label>
            <input type="text" class="form-control" id="documento" name="documento" placeholder="Documento Identidad"
              value="{{ documento }}">
          </div>
          <div class="col-sm-6">
            <label for="nombre">Nombre * </label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" value="{{ nombre }}">
          </div>

        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <label for="modalidad">Teléfono * </label>
            <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Teléfono"
              value="{{ telefono }}">
          </div>
          <div class="col-sm-6">
            <label for="nombre">Correo * </label>
            <input type="email" class="form-control" id="correo" name="correo" placeholder="Correo"
              value="{{ correo }}">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-6">
            <label for="nombre">Contraseña * </label>
            <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}">
          </div>
         
        </div>
        <div class="form-group row">


          <div class="col-sm-6">
            &nbsp;
          </div>

          <button type="submit" class="btn btn-primary px-4 float-right">Guardar</button>

      </form>
    </div>
  </div>
</div>