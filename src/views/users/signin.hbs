<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 class="h4">
         Inicio de sesión 
        </h1>
      </div>
        <img class="rounded-circle mx-auto d-block logo m-4" src="/img/logo.png" alt="Logo">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <div align="left"> <label for="modalidad">Usuario: </label></div>
           
            <input type="text" class="form-control" name="documento" placeholder="Documento" autofocus>
          </div>
          <div class="form-group">
            <div align="left"><label for="modalidad">Contraseña: </label></div>
            
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <button class="btn btn-primary btn-block">
            Enviar 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
