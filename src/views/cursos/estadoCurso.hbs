                     <div class="col-sm-6">
                        <h4>Selecione el docente al cual se le asignara el curso :</h4>
                    </div>
                    <div class="col-sm-6">
                        <input type="hidden" name="_method" value="PUT">
                        
                        <select class="form-control" id="idUser" name="idUser">
                            {{#each docente}}
                                <option value="{{_id }}"> {{nombre}} : CC: {{ documento }} </option>
                            {{/each}}
                        </select>
                    </div>
                   
                </div>
                
                <button type="submit" class="btn btn-primary px-4 float-right">Incribir</button>
            </form>
        </div>
    </div>
</section>
