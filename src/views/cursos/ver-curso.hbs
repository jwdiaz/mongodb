
<div class="container">
    
    <h2>Ver Curso</h2>
    <hr/>

    <div class="row">
         {{#each infoCurso}}
        <fieldset>
        <div class="col-md-12 mx-auto">
            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="idCurso">Id Curso: </label>
                    {{ idCurso}}
                </div>
                <div class="col-sm-6">
                    <label for="nombre">Nombre: </label>
                    {{ nombre}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="descripcion">Descripci√≥n: </label>
                    {{ descripcion}}
                </div>
                <div class="col-sm-6">
                    <label for="valor">Valor ($): </label>
                    ${{ valor}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="modalidad">Modalidad: </label>
                    {{ modalidad}}
                </div>
                <div class="col-sm-6">
                    <label for="intensidadHoraria">Intensidad Horaria: </label>
                    {{#if intensidad}}
                        {{ intensidad}} horas
                    {{/if}}
                </div>
            </div>
           
        </div>
        </fieldset>
         {{/each}}
    </div>
</div>
